/* pages/editAddress/editAddress.wxss */
Page {
  display: flex;
  flex-flow: column;
  background-color: #FBFBFB;
}
.address-header {
  width: 750rpx;
  height: 80rpx;
  background-color: #FFF;
  text-align: center;
  border: 1rpx #ccc solid;
}
.comeback-btn {
  margin-left: 50rpx;
  font-size: 36rpx;
  line-height: 80rpx;
}
.address-title {
  font-size: 34rpx;
  line-height: 80rpx;
  margin-left: -100rpx;
  color: #333;
}
.add-address {
  height: 80rpx;
  line-height: 80rpx;
  color: #FFF;
  font-size: 34rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  width: 750rpx;
}
.address-content {
  background: #FFF;
}
.address-info {
  margin: 0 20rpx;
}
.address-list {
  height: 60rpx;
  font-size: 26rpx;
  border-bottom: 1rpx #ccc solid;
  line-height: 80rpx;
  padding-top: 20rpx;
}
.address-font {
  color: #333;
  font-size: 26rpx;
  line-height: 80rpx;
  display: inline-block;
  position: relative;
  top: -22rpx;
  width: 160rpx;
  text-align: left;
}
.address-input {
  display: inline-block;
  width: 500rpx;
  position: relative;
  top: -5rpx;
}
.jump-icon {
  font-size: 34rpx;
  line-height: 80rpx;
  display: inline-block;
  position: relative;
  top: -15rpx;
}
.no-border {
  border: none;
}
.address-make {
  height: 80rpx;
  margin-top: 20rpx;
  background: #FFF;
}
.icon-make {
  color: #F99001;
  float: right;
  font-size: 36rpx;
  margin-right: 30rpx;
  position: relative;
  top: -18rpx;
}