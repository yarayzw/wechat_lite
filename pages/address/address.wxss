/* pages/address/address.wxss */
Page {
  display: flex;
  flex-flow: column;
  background-color: #FBFBFB;
}
.address-header {
  width: 750rpx;
  height: 80rpx;
  background-color: #FFF;
  text-align: center;
  border: 1rpx #ccc solid;
}
.comeback-btn {
  margin-left: 50rpx;
  font-size: 36rpx;
  line-height: 80rpx;
}
.address-title {
  font-size: 34rpx;
  line-height: 80rpx;
  margin-left: -100rpx;
  color: #333;
}
.add-address {
  height: 80rpx;
  line-height: 80rpx;
  color: #FFF;
  font-size: 34rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  width: 750rpx;
}